{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "abandonmentThreshold": "2 years",
  "addLabels": ["Renovate Bot"],
  "assignees": [
    "TheBeruriahIncident",
  ],
  "dependencyDashboard": true,
  "dependencyDashboardAutoclose": true,
  "dependencyDashboardOSVVulnerabilitySummary": "all",
  "dependencyDashboardReportAbandonment": true,
  "dependencyDashboardTitle": "[Renovate Bot] Dependency Dashboard",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "matchDepNames": ["!/^com.android.tools.build:gradle/"],
      "automerge": true,
    },
    {
      "matchDepNames": ["!/^com.android.tools.build:gradle/"],
      // wait a week to take new versions, to increase the odds that issues are caught before they hit us.
      // security issues (e.g. malicious code insertions) will hopefully be blacklisted in that time.
      // for normal major bugs, we'll hopefully at least be able to see existing debugging or manually bump to a patch.
      "minimumReleaseAge": "7 days",
    },
    {
      "matchDepNames": ["/^com.android.tools.build:gradle/"],
      // wait a month so that we aren't getting poked to do this upgrade before Android Studio even supports it
      "minimumReleaseAge": "1 month",
      "draftPR": true,
      "commitMessagePrefix": "[NEEDS WORK] ",
      "prHeader": "> [!CAUTION]\n> ***Check the AGP upgrade assistant for any additional changes, and do not upgrade past what the upgrade assistant supports! Android Studio does not necessarily support the latest version yet.***",
    },
    {
      // JUnit 6 requires Android SDK 35, which we are not ready to require
      "matchManagers": ["gradle"],
      "matchPackageNames": ["junit-jupiter-api"],
      "allowedVersions": "< 6.0.0",
      "rangeStrategy": "bump",
    },
    {
      // iOS AppAuth 2.0.0 requires iOS 12, which we are not ready to require
      "matchManagers": ["swift", "cocoapods"],
      "matchPackageNames": ["AppAuth"],
      "allowedVersions": "< 2.0.0",
      "rangeStrategy": "bump",
    },
  ],
  "reviewers": [
    "TheBeruriahIncident",
  ],
}
